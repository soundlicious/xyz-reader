<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="h1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">96sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:letterSpacing">-1.5</item>
    </style>

    <style name="h2" parent="h1">
        <item name="android:textSize">60sp</item>
        <item name="android:letterSpacing">-0.5</item>
    </style>

    <style name="h3" parent="h1">
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="h4" parent="h1">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="h5" parent="h1">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="h6" parent="h1">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="subtitle1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <style name="subtitle2" parent="subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="body1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <style name="body2" parent="body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:letterSpacing">0.5</item>
    </style>
</resources>